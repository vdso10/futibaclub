    <% include elements/header %>

        <!--Navbar-->
        <nav class="navbar navbar-expand-lg navbar-light green fixed-top scrolling-navbar">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="/img-futiba-club/logo.png" height="30" alt="Futiba Club">
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent-7" aria-controls="navbarSupportedContent-7"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent-7">
                        <% include elements/menu-items %>                       
                </div>
            </div>
        </nav>
    </header>
    <section class="content">        
        <% if(ranking.length > 0) { %>
        <div class="container">
                <h2>Ranking dos Usuários</h2>
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Usuário</th>
                            <th>Pontos</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% ranking.forEach( rank => { %>
                        <tr>
                            <th scope="row">
                                <%= rank.id %>
                            </th>
                            <td>
                                <%= rank.name %>
                            </td>
                            <td>
                                <% if(!rank.score) { %> 
                                    Nenhum Ponto Computado
                                <% } else { %> 
                                <%= rank.score %> 
                                <% } %> 
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>        
        <% } else { %>
        <div class="container">
        <p class="alert alert-info">Nenhum Ponto Computado.</p>
        </div>
        <% } %>
    </section>
    
    <% include elements/footer %>